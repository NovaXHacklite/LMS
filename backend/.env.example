# LMS Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lms_database
# For MongoDB Atlas (cloud), use connection string like:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lms_database

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes (10 * 1024 * 1024)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,ppt,pptx,xls,xlsx,mp4,mp3,zip
UPLOAD_PATH=uploads
STATIC_URL=/uploads

# Email Configuration (for future features like notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=LMS System <noreply@lms.com>

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# Security Configuration
BCRYPT_ROUNDS=12
# Number of rounds for password hashing

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# AI Service Configuration
AI_SERVICE_TIMEOUT=30000
# 30 seconds timeout for AI requests
AI_MAX_TOKENS=2000
# Maximum tokens for AI responses

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_MESSAGING=true
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=true
ENABLE_ADAPTIVE_QUIZZES=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Performance & Monitoring
ENABLE_API_DOCS=true
DEBUG=lms:*
